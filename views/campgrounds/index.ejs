</nav>

<div class="container-fluid">
    <div class="row">
        <% for (let camp of limitedCampgrounds) { %>
        <div id='indexpagecard' class="card mb-3 col-2">
            <% if (camp.images.length) { %>
            <img data-src="<%= camp.images[0].url.replace('/upload', '/upload/w_auto,c_scale') %>"
                class="d-block w-100 cld-responsive mt-1 card-image" alt="">
            <% } %>
            <div class="card-body">
                <h5 class="card-title"><%= camp.title %></h5>
                <p class="card-text"><%= camp.description %></p>
            </div>
            <div class="card-body d-flex flex-column justify-content-end">

                <p class="card-text">
                    <small class="text-muted card-location"><%= camp.location %></small>
                </p>
                <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary card-more-button">View
                    <%= camp.title %></a>
            </div>
        </div>
        <% } %>
    </div>
</div>

