<% layout('/layouts/boilerplate') %>

<div class="mt-3" id="clustermap">

</div>


<div class="container">
    <h1 class='mt-3'> All Campgrounds </h1>
    <% for (let camp of campgrounds) { %>
    <div class="card mb-3">
        <div class="row">
            <div class="col-md-4">
                <% if (camp.images.length) { %>
                <img data-src="<%= camp.images[0].url.replace('/upload', '/upload/w_auto,c_scale') %>"
                    class="d-block w-100 cld-responsive" alt="">
                <% } %>
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <h5 class="card-title"><%= camp.title %></h5>
                    <p class="card-text"><%= camp.description %></p>
                    <p class="card-text">
                        <small class="text-muted"><%= camp.location %></small>
                    </p>
                    <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">View <%= camp.title %></a>
                </div>
            </div>
        </div>
    </div>
    <% } %>

    <nav class='offset-2 offset-md-4' aria-label="Page navigation example">
        <ul class="pagination">
            <li class="page-item">
                <a class="page-link" id='wordedPaginationButton' href="">Previous</a>
            </li>
            <li class="page-item">
                <a class="page-link" id='numberedPaginationButton' href="">1</a>
            </li>
            <li class="page-item">
                <a class="page-link" id='numberedPaginationButton' href="">2</a>
            </li>
            <li class="page-item">
                <a class="page-link" id='numberedPaginationButton' href="">3</a>
            </li>
            <li class="page-item">
                <a class="page-link" id='numberedPaginationButton' href="">4</a>
            </li>
            <li class="page-item">
                <a class="page-link" id='numberedPaginationButton' href="">5</a>
            </li>
            <li class="page-item">
                <a class="page-link" id='wordedPaginationButton' href="">Next</a>
            </li>
        </ul>
    </nav>
</div>



<script>
    const mapToken = '<%- process.env.MAPBOX_PUBLIC_TOKEN %>'
    const camps = '<%- JSON.stringify(campgrounds) %>'
    const currentPage = '<%-currentPage %>'
    const totalPages = '<%-totalPages %>'
</script>
