<% layout('/layouts/boilerplate') %>

<div class="mt-3" id="clustermap">

</div>

<h1 class='mt-3'> All Campgrounds </h1>

<% for (let camp of campgrounds) { %>
<div class="card mb-3">
    <div class="row">
        <div class="col-md-4">
            <% if (camp.images.length) { %>
            <img class="img-fluid" src="<%= camp.images[0].url %>" alt="">
            <% } %>
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= camp.title %></h5>
                <p class="card-text"><%= camp.description %></p>
                <p class="card-text">
                    <small class="text-muted"><%= camp.location %></small>
                </p>
                <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">View <%= camp.title %></a>
            </div>
        </div>
    </div>
</div>
<% } %>

<script>
    const mapToken = '<%- process.env.MAPBOX_PUBLIC_TOKEN %>'
    const camps = '<%- JSON.stringify(campgrounds) %>'
</script>
<script src='/javascripts/indexPageClusterMap.js'></script>